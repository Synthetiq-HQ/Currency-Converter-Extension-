{
  "manifest_version": 3,
  "name": "QuickCurrency",
  "version": "1.1.0",
  "description": "Instantly convert highlighted currency values to your preferred currency (default: GBP). Free, fast, and privacy-friendly.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.frankfurter.dev/*",
    "https://api.exchangerate.host/*",
    "https://api.exchangerate-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "assets/synthetiq-logo-24.png",
      "48": "assets/synthetiq-logo-24.png",
      "128": "assets/synthetiq-logo-128.png"
    },
    "default_title": "QuickCurrency â€” by Synthetiq"
  },
  "options_page": "options.html",
  "icons": {
    "16": "assets/synthetiq-logo-24.png",
    "48": "assets/synthetiq-logo-24.png",
    "128": "assets/synthetiq-logo-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/synthetiq-logo-24.png",
        "assets/synthetiq-logo-128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
